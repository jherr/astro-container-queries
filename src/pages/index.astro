---
import Layout from "./_components/Layout.astro"
import ResponsiveCard from "./_components/ResponsiveCard.astro"

import products from "../products";
---

<Layout>
	<div class="flex flex-wrap @container">
		{products.map(({ src, name, id }) => (
			<div class="@container w-full @md:w-1/2 @xl:w-1/3 @3xl:w-1/4 p-1" style={{
				viewTransitionName: `products-${id}`,
			}}>
				<a href={`/top-nav/${id}`}>
				  <ResponsiveCard src={src} alt={name} active>
			 		  <h1 class="text-md @lg:text-3xl font-bold">{name}</h1>
				  </ResponsiveCard>
			  </a>
			</div>
		))}
	</div>
</Layout>
